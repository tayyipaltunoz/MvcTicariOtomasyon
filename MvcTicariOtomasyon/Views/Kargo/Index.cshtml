@using MvcTicariOtomasyon.Models.Siniflar;
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kargolar</h2>
<br />
@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip No: @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>
}

<table class="table table-bordered" style="margin-top: 5px;">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip No</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in @Model)
    {

        <tr>
            <td>@k.Personel</td>
            <td>@k.Alici</td>
            <td>@k.Tarih</td>
            <td style="color: darkslategrey">@k.TakipKodu</td>
            <td><a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-danger">Detaylar</a></td>
            
        </tr>
    }


</table>
<a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo Girişi</a>

