<!-- body starts -->
<body>

    <!-- section -->
    <section class="register">
        <div class="header">
            <div class="logo">
                <a href="#">MVCTICARI</a>
            </div>
            <div class="social">
                <li><a href="https://www.instagram.com/tayyipaltunoz/"><span class="fa fa-instagram"></span></a></li>
                <li><a href="https://twitter.com/altunoztayyip"><span class="fa fa-twitter"></span></a></li>
                <li><a href="https://www.linkedin.com/in/tayyipaltunoz/"><span class="fa fa-linkedin"></span></a></li>
                <li><a href="https://github.com/tayyipaltunoz"><span class="fa fa-github"></span></a></li>
            </div>
            <div class="clear"></div>
        </div>

        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <p>Şimdi kullanmaya başla..</p>
                    <h1>Asp.Net Mvc5 ile</h1>
                    <h2>Online Ticari Otomasyon</h2>
                    <p>
                        KOBİ'lerin muhasebe, sipariş, stok takibi, satış, satın alma, raporlama, borç takibi,
                        çek senet takibi gibi iş süreçlerini tek noktadan yönetebilmesini sağlıyor.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="#">Firmalar</a></li>
                            <li><a class="read" href="#">Ürünlerimiz</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog2">kayıt ol »</a>
                </div>
                <div class="register-in middle">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog">Giriş »</a>
                </div>
                <div class="register-in">
                    <a class="book popup-with-zoom-anim button-isi zoomIn animated" data-wow-delay=".5s" href="#small-dialog1">Personel Giriş »</a>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2020 Project. Tüm Hakları saklıdır | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <!-- login form popup-->
    <div class="pop-up">
        <div id="small-dialog" class="mfp-hide book-form">

            <div class="login-form login-form-left">
                <div class="agile-row">
                    <h3>Giriş Yap</h3>
                    <span class="fa fa-lock"></span>
                    <div class="clear"></div>
                    <div class="login-agileits-top">
                        @using (Html.BeginForm("Login", "LogIn", FormMethod.Post))
                        {
                            <form action="#" method="post">
                                <input type="text" class="name" name="CariMail" Placeholder="Email" required="" />
                                <input type="password" class="password" name="CariSifre" Placeholder="Şifre" required="" />
                                <input type="submit" value="Giriş Yap">
                            </form>
                        }

                    </div>
                    <div class="login-agileits-bottom">
                        <h6><a href="#">Şifreni mi unuttun?</a></h6>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- //login form popup-->
    <!-- personel giriş  popup-->
<div class="pop-up">
    <div id="small-dialog1" class="mfp-hide book-form">

        <div class="login-form login-form-left">
            <div class="agile-row">
                <h3>Personel Giriş</h3>

                <div class="clear"></div>
                <div class="login-agileits-top">
                    @using (Html.BeginForm("AdminLogin", "LogIn", FormMethod.Post))
                    {
                        <form action="#" method="post">
                            <input type="text" class="name" name="KullaniciAd" Placeholder="Kullanıcı Adı" required="" />
                            <input type="text" class="email" name="Sifre" Placeholder="Şifre" required="" />
                            <input type="submit" value="Giriş Yap" id="giris">
                            <script>
                                $('giris').click(function() {

                                });
                            </script>
                        </form>
                    }

                </div>
            </div>
        </div>

    </div>
</div>
<!-- //subscribe form popup-->
    <!-- register form popup-->
    <div class="pop-up">
        <div id="small-dialog2" class="mfp-hide book-form">

            @Html.Action("Register", "LogIn")

        </div>
    </div>
    <!-- //register form popup-->
    <!-- js -->
    <script type="text/javascript" src="~/Theme/weblogin/js/jquery-2.1.4.min.js"></script>
    <!-- //js -->
    <!--popup-js-->
    <script src="~/Theme/weblogin/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });

        });
    </script>
    <!--//popup-js-->

