@using MvcTicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
        <p>
            Ürün Adı: @Html.TextBox("p")
            <input type="submit" value="Ara"/>
        </p>
    }
<br />
<table class="table table-bordered">
    <tr>
     
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Fotoğraf</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>
    @foreach (var u in Model)
    {
        <tr>
           
            <td>@u.UrunAd</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyati ₺</td>
            <td>@u.SatisFiyati ₺</td>
            <td>
                <div>
                    <img width="40" height="40" src="@u.UrunGorsel" />
                    <div class="photo-text-more">
                        <span class="icon icon-search"></span>
                    </div>
                </div>             
            </td>
            <td><a href="/Urun/UrunSil/@u.UrunId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@u.UrunId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün</a>