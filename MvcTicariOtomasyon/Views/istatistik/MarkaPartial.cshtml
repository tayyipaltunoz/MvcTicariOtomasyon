@model IEnumerable<MvcTicariOtomasyon.Models.Siniflar.PartialMarka>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalar</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>

                @{int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo</td> @*sıra numarasını 1 arttır ve yazdır*@
                        <td>@x.marka</td>
                        <td>
                            @if (x.sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (x.sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (x.sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.sayi == 1)
                            {
                                <span class="badge bg-danger">@x.sayi</span>
                            }
                            @if (x.sayi == 2)
                            {
                                <span class="badge bg-warning">@x.sayi</span>
                            }
                            @if (x.sayi == 3)
                            {
                                <span class="badge bg-success">@x.sayi</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

