@model MvcTicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kullanıcı Bilgileri</h2>

<br />

@using (Html.BeginForm("Index2", "UserPanel", FormMethod.Post))
{
    <table class="table table-hover">
        <tr>
            <td>
                <label>Mail adresi: @HttpContext.Current.User.Identity.Name</label>
            </td>
        </tr>
        <tr>
            <td>@Html.Label("İsim") @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })</td>
        </tr>
        <tr>
            <td>@Html.Label("Mail") @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })</td>
        </tr>
        <tr>
           
            <td> @Html.Label("Şifre") @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })</td>
        </tr>
    </table>
    <button class="btn btn-warning"> Bilgileri Güncelle</button>
}